// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Time {
  id        Int      @id @default(autoincrement())
  updated   String
  updatedISO String
  updateduk String
  Bitcoin   Bitcoin  @relation(fields: [bitcoinId], references: [id])
  bitcoinId Int
}

model Bitcoin {
  id         Int      @id @default(autoincrement())
  disclaimer String
  chartName  String
  time       Time[]
  bpi        Bpi[]
}

model Bpi {
  id          Int      @id @default(autoincrement())
  code        String
  symbol      String
  rate        String
  description String
  rate_float  Float
  Bitcoin     Bitcoin  @relation(fields: [bitcoinId], references: [id])
  bitcoinId   Int
}
